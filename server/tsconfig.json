{
  "compilerOptions": {
    /* Language + Environment */
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "resolveJsonModule": true,

    /* Node.js compatibility */
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliasing */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    /* JSX options (React-like imports support) */
    "jsx": "react-jsx",

    /* Output */
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    /* Experimental (optional but useful) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
